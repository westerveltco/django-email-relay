# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{{J,j}ustfile,.{J,j}ustfile,{*.{py,rst,ini,md}}}]
indent_size = 4
indent_style = space

[*.py]
line_length = 120
multi_line_output = 3

[*.{css,html,js,json,sass,scss,yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[{Makefile,*.bat}]
indent_style = tab
